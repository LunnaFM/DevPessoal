<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DevPessoal">

        <!-- ListaActivity como launcher (tela inicial) -->
        <activity
            android:name=".ListaActivity"
            android:exported="true"
            android:theme="@style/Theme.DevPessoal.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity (Cadastro) -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.DevPessoal.NoActionBar"
            android:parentActivityName=".ListaActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ListaActivity" />
        </activity>

        <!-- AuthorActivity (Nova Activity de Autoria) -->
        <activity
            android:name=".AuthorActivity"
            android:exported="false"
            android:theme="@style/Theme.DevPessoal.NoActionBar"
            android:parentActivityName=".ListaActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ListaActivity" />
        </activity>

        <!-- SettingsActivity (Configurações) -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.DevPessoal.NoActionBar"
            android:parentActivityName=".ListaActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ListaActivity" />
        </activity>

    </application>

</manifest>